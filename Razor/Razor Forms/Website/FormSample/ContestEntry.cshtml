@{
    Page.Title = "Contest Entry - Demo Form";
    Layout = "~/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <h1>Contest Entry</h1>
        <p>Please fill out the following form to enter the contest. This contest is only available to residents in Western Canada.</p>

        <form method="post" action="ContestEntry.cshtml">
            <fieldset>
                <legend>Application Form</legend>

                <label for="firstName">First Name</label>
                <input class="form-control" name="firstName" type="text" />

                <label for="lastName">Last Name</label>
                <input class="form-control" name="lastName" type="text" />

                <label for="streetAddress1">Street Address 1</label>
                <input name="streetAddress1" type="text" class="form-control">

                <label for="streetAddress2">Street Address 2</label>
                <input name="streetAddress2" type="text" class="form-control">

                <label for="city">City</label>
                <input name="city" type="text" class="form-control">

                <label for="province">Province/Territory</label>
                <select name="province" class="form-control">
                    <option value="">(select a province)</option>
                    <option value="AB">Alberta</option>
                    <option value="BC">British Columbia</option>
                    <option value="SK">Saskatchewan</option>
                    <option value="YT">Yukon Territories</option>
                    <option value="NT">Northwest Territories</option>
                </select>

                <label for="postalCode">Postal Code</label>
                <input name="postalCode" type="text" class="form-control" />

                <label for="emailAddress">Email</label>
                <input name="emailAddress" type="email" class="form-control" />

                <p>
                    Note: You must agree to the contest terms in order to be entered.<br />
                    <input name="agreeToTerms" type="checkbox" />
                    <label for="agreeToTerms">I agree to the terms of the contest.</label>
                </p>
            </fieldset>
            <input type="submit" value="Submit Application" class="btn btn-primary" />
        </form>
    </div>
    <div class="col-md-6">
        @{
            if (IsPost)
            {
                // Getting all the data from the form
                string first = Request.Form["firstName"]; // The name in the string must match the name attribute on the input element of the form
                string last = Request.Form["lastName"];
                string address1 = Request.Form["streetAddress1"];
                string address2 = Request.Form["streetAddress2"];
                string city = Request.Form["city"];
                string prov = Request.Form["province"];
                string postalCode = Request.Form["postalCode"];
                string email = Request.Form["emailAddress"];
                string agree = Request.Form["agreeToTerms"];

                // Echo back what the user entered
                <div>
                    @first @last<br />
                    @address1 @address2<br />
                    @city, @prov &nbsp;&nbsp; @postalCode<br />
                    @email<br />
                    @agree
                </div>
            }
        }
    </div>
</div>